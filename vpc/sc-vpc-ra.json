            }
        },
        "NATGatewayBEIP": {
            "Value": {
                "Ref": "NATGatewayBEIP"
            }
        },
        "RouteTableAPublic": {
            "Value": {
                "Ref": "RouteTableAPublic"
            }
        },
        "RouteTableBPublic": {
            "Value": {
                "Ref": "RouteTableBPublic"
            }
        },
        "RouteTableAPrivate": {
            "Value": {
                "Ref": "RouteTableAPrivate"
            }
        },
        "RouteTableBPrivate": {
            "Value": {
                "Ref": "RouteTableBPrivate"
            }
        },
        "NetworkAclPublic": {
            "Value": {
                "Ref": "NetworkAclPublic"
            }
        },
