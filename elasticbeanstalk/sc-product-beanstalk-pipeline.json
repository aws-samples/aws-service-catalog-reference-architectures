{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "CodePipeline Elastic Beanstalk project ServiceCatalog product. (fdp-1qj64b32f)",
    "Parameters":
      {
        "PortfolioProvider": {
            "Type":"String",
            "Description":"Provider Name"
        },
        "LaunchConstraintARN": {
            "Type":"String",
            "Description":"ARN of the launch constraint role for ECS products."
        },
        "PortfolioId":{
            "Type":"String",
            "Description":"The SC portfolio this product will be attached to."
        },
        "RepoRootURL": {
            "Type":"String",
            "Description":"Root url for the repo containing the product templates."
        }
      },
    "Resources": {
        "beanstalkpipeline": {
            "Type": "AWS::ServiceCatalog::CloudFormationProduct",
            "Properties": {
                "Name": "Elastic Beanstalk Codepipeline project",
                "Description": "This product builds a codepipeline project for Elastic Beanstalk CI/CD.",
                "Owner": {"Ref":"PortfolioProvider"},
                "Distributor": {"Ref":"PortfolioProvider"},
                "SupportDescription": "Operations Team",
                "SupportEmail": "support@yourcompany.com",
                "AcceptLanguage": "en",
                "SupportUrl": "http://helpdesk.yourcompany.com",
                "ProvisioningArtifactParameters": [
                    {
                        "Description": "CodePipeline project for Linux Elastic Beanstalk",
                        "Info": {
                            "LoadTemplateFromURL": {"Fn::Sub": "${RepoRootURL}elasticbeanstalk/beanstalk-codepipeline-ra.json"}
                        },
                        "Name": "Linux v1.0"
                    },
					{
                        "Description": "CodePipeline project for Windows Elastic Beanstalk",
                        "Info": {
                            "LoadTemplateFromURL": {"Fn::Sub": "${RepoRootURL}elasticbeanstalk/beanstalk-codepipeline-dotnet.json"}
                        },
                        "Name": "Windows v1.0"
                    }
                ]
            }
        },
        "Associatenginxcf":{
          "Type" : "AWS::ServiceCatalog::PortfolioProductAssociation",
          "Properties" : {
            "PortfolioId" : {"Ref":"PortfolioId"},
            "ProductId" :   {"Ref":"beanstalkpipeline"}
          }
        },
        "constraintnginxcf":{
          "Type" : "AWS::ServiceCatalog::LaunchRoleConstraint",
          "DependsOn" : "Associatenginxcf",
          "Properties" : {
            "PortfolioId" : {"Ref":"PortfolioId"},
            "ProductId" :   {"Ref":"beanstalkpipeline"},
            "RoleArn" : {"Ref":"LaunchConstraintARN"},
            "Description": {"Ref":"LaunchConstraintARN"}
          }
        }
    },
    "Outputs": {
        "ProductId":{"Value": { "Ref":"beanstalkpipeline" } }
    }
}